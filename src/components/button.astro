---
import { Icon } from 'astro-icon/components';

export interface Props {
    url: string;
    title: string;
    external?: boolean;
    small: boolean;
}
const { url, title, external, small } = Astro.props;
---

<p class="m-0">
    <a href={url} target="_blank" class={`inline-flex items-center font-medium border-2 border-light bg-buttonLight rounded-lg  dark:border-dark dark:bg-buttonDark
     dark:text-blue-300 hover:border-dark hover:bg-transparent dark:hover:border-light dark:hover:bg-transparent dark:hover:text-light ${small ? 'py-1 px-3 text-sm' : 'py-2 px-6'}`}>
        <span>{title}</span>
        {
        external ? (
            <Icon name="ph:arrow-square-out" width="24" height="24" class="ml-2"/>
        ) : ("")
        }
        </a>
</p>