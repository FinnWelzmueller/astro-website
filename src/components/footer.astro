---
import RightNavbarLink from './rightNavbarLink.astro';
import '../styles/global.css';
---

<footer class="lg:hidden fixed bottom-0 w-full dark:bg-dark bg-light border-t-2 border-dark dark:border-light py-2 z-50 flex items-center justify-between px-4">
  <!-- Hamburger Button (links) -->
  <button
    id="mobile-menu-button"
    type="button"
    class="inline-flex items-center justify-center p-2 w-10 h-10 text-sm text-gray-500 rounded-lg hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
    aria-controls="footer-menu"
    aria-expanded="false"
  >
    <span class="sr-only">Open main menu</span>
    <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
    </svg>
  </button>



  <!-- Social Icons (zentriert/rechts) -->
  <div class="flex gap-3 items-center">
    <RightNavbarLink icon="fa-brands:linkedin" url="https://www.linkedin.com/in/finnwelzmueller/" title="LinkedIn" ></RightNavbarLink>
<RightNavbarLink icon="fa-brands:instagram-square" url="https://www.instagram.com/finnwe97/" title="Instagram"></RightNavbarLink>
<RightNavbarLink icon="fa-solid:envelope" url="mailto:finnwelzmueller97((at))gmail.com" title="Mail" target="_self"></RightNavbarLink>
<RightNavbarLink icon="fa-brands:github" url="https://www.github.com/FinnWelzmueller" title="GitHub"></RightNavbarLink>
<RightNavbarLink icon="fa-brands:researchgate" url="https://www.researchgate.net/profile/Finn-Welzmueller" title="ResearchGate" iconcolor=""></RightNavbarLink>
    <!-- Darkmode Toggle -->
    <div class="colorSwitch hover:cursor-pointer bg-dark dark:bg-light rounded-full p-1 hover:-translate-y-1 ease-linear duration-200">
      <img src="/icons/moon.svg" alt="moon" class="w-6 h-6" />
    </div>
  </div>
</footer>

<div id="mobile-menu" class="hidden fixed inset-0 bg-light dark:bg-dark bg-opacity-95 z-40 flex flex-col items-center justify-center space-y-4">
  <a href="/" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">Home</a>
  <a href="/about" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">About</a>
  <a href="/education" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">Education</a>
  <a href="/research" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">Research</a>
  <a href="/work" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">Work</a>
  <a href="/projects" class="text-xl text-gray-800 dark:text-gray-200 hover:underline">Projects</a>

</div>

<script is:inline>
  const menu = document.getElementById("mobile-menu");
  const toggleBtn = document.getElementById("mobile-menu-button");
  const closeBtn = document.getElementById("mobile-menu-close");

  toggleBtn?.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });


  closeBtn?.addEventListener("click", () => {
    menu.classList.add("hidden");
  });

  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape") {
      menu.classList.add("hidden");
    }
  });
  document.addEventListener("keydown", (e) => {
  if (e.key === "Escape") {
    menu.classList.add("hidden");
  }
});

</script>