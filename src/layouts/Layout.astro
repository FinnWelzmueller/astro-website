---
import LeftNavbarLinks from '../components/leftNavbarLinks.astro';
import RightNavbarLinks from '../components/rightNavbarLinks.astro';
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<script is:inline>
			(() => {
			  const theme = localStorage.getItem("theme");
			  if (theme === "dark" || (!theme && window.matchMedia("(prefers-color-scheme: dark)").matches)) {
				document.documentElement.classList.add("dark");
			  } else {
				document.documentElement.classList.remove("dark");
			  }
			})();
		  </script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>finnwelzmueller.online</title>
	</head>
	<body class="font-mono bg-light dark:bg-dark text-dark dark:text-light">
			<header class="sticky top-0 z-50 bg-light/90 dark:bg-dark/90 backdrop-blur-md shadow-md flex items-center justify-between px-4 py-8 font-medium">
				<nav class="flex items-center justify-center gap-x-8 text-2xl">
					<LeftNavbarLinks/>
				</nav>
				<nav class="flex items-center justify-center gap-x-5">
					<RightNavbarLinks/>
				</nav>
			</header>
			<main class="md:container md:mx-auto w-full min-h-screen">
			<article class="text-xl px-4">
				<h1 class="text-4xl mb-6">{title}</h1>
				<slot />
			</article>
			<footer></footer>
		</main>
		<script src="/scripts/app.js" defer></script>
		<script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
	</body>
</html>

<style is:global>
	@import "../styles/global.css";
</style>